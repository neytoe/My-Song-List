@model Song

@{ 
    ViewBag.Title = ViewBag.Action + " song";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="Post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="year">Year</label>
        <input class="form-control" asp-for="year" />
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating</label>
        <input class="form-control" asp-for="Rating" />
    </div>

    <div class="form-group">
        <label asp-for="GenreId">Genre</label>
        <select asp-for="GenreId" class="form-control">
            <option value="">Select a genre</option>
            @foreach (Genre genre in ViewBag.Genres)
            {
                <option value="@genre.GenreId">@genre.Name</option>
            }
        </select>
    </div>

    <input type="hidden" asp-for="SongID" />
    <button type="submit" class="btn btn-outline-success">@ViewBag.Title</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Cancel</a>
</form>